extends layout

append head
    link(rel='stylesheet', href='/cillmit99b/sign-up.css')

block content
    - const isLogin = is_login === 'yes'

    if errors.length
        ul
            each error in errors
                li #{error.msg}
    form(method="post")
        div
            label(for="username") Username
            input(name="username" id="username" value=username)
        div
            label(for="password") Password
            input(name="password" id="password" type="password" )
        div
            input(type="checkbox" id="is_login" name="is_login" value="yes" checked=isLogin)
            label(for="is_login") Auto log in after sign up
        div
            input(type="submit" value="Sign Up")
