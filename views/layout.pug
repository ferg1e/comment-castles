doctype html
html
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title=html_title
    link(rel='stylesheet', href='/cillmit99b/style.css')
    link(rel="icon" href="/images/favicon-32.png" sizes="32x32")
    block head

    if max_width !== null
      style.
        body {
          background: #e7e5df;
        }

        #body2 {
          max-width: #{max_width}px;
          max-width: #{max_width/16}rem;
          margin: 0 auto;
          background: #fefefe;
          padding: 10px;
          padding: .625rem;
        }

        @media(max-width: #{(max_width + 40)/16}em) {
          body {
            background: #fefefe;
          }

          #body2 {
            padding: 0;
            max-width: 100%;
          }
        }
    else
      style.
        body {
          background: #fefefe;
        }

  body
    div#body2
      header
        div.main-logo
          a(href="/")
            |üè∞ 
            span(id="peaches") Comment
            | 
            span(id="stink") Castles
        nav.main-nav
          ul
            li
              a(href="/") home

            if user
              li
                a(href="/new") new post
              li
                a(href="/following") following
              li
                a(href="/inbox") inbox
              li
                a(href="/settings") settings
              li
                a(href="/manual") manual
              li
                a(href="/logout") log out
              li #{user.username}
            else
              li
                a(href="/sign-up") sign up
              li
                a(href="/login") log in
              li
                a(href="/settings") settings
              li
                a(href="/manual") manual
      main
        block content
      footer.main-footer
        nav.main-footer-nav
          ul
            li
              a(href="/privacy-policy") privacy policy
            li
              a(href="/contact-us") contact us
            li
              a(href="/api") API
            li
              a(href="https://github.com/ferg1e/peaches-n-stink") GitHub
