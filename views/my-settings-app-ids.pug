extends my-settings-top

append head
    link(rel='stylesheet', href='/cillmit99b/my-settings-groups.css')

block content2
    h3 Register New App

    if success
        ul.usuccess1
            li=success

    if errors.length
        ul.uerror1
            each error in errors
                li #{error.msg}

    form(method="post")
        div
            label(for="name") Application Name
            input(name="name" id="name")
        div
            label(for="ruri") Redirect URI
            input(name="ruri" id="ruri")
        div
            input(type="submit" value="Create")

    h3 Your Created Apps

    div display previously created here
