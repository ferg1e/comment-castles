extends my-settings-top

append head
    link(rel='stylesheet', href='/cillmit99b/my-settings-group.css')

block content2
    h3 Add User

    if errors.length
        ul
            each error in errors
                li #{error.msg}

    form(method="post")
        div
            label(for="user") Username
            input(name="user" id="user")
        div
            input(type="submit" value="Add")

    h3 Existing Users

    if group_members.length
        ul
            each gm in group_members
                li
                    span= gm.username
    else
        div None
